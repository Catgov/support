<section id="content">
  <header class="section-header">Technical Issues</header>
  <label for="target_url">URL on <span style="background-color: #F2F2F2;">gov.uk</span> </label>
  <input id="target_url" name="url" type="text" required aria-required="true" <%= erb :assignvalue, :locals => {:param => @formdata[:url]} %>>
  <%= erb :errors, :locals => {"key" => "Url"} %>

  <fieldset>
    <div class="comments">
      <label for="comments">Additional comments</label>
      <textarea id="comments" rows="10" cols="50" name="additional"><%= @formdata[:additional] %></textarea>
    </div>
  </fieldset>
</section>
