<section id="content">
  <header class="section-header">Content Details</header>
  <label for="target_url">URL on </label><label class="url">http://gov.uk/</label>
  <input id="target_url" name="url" type="text" required <%= erb :assignvalue, :locals => {:param => @formdata[:url]} %>>

  <label for="add_content">Add your content</label>
  <textarea id="add_content" name="add_content" rows="6" cols="50" required><%=@formdata[:add_content]%></textarea>

  <%= erb :date, :locals => {:title => "When should this content be added?", :label => 'need_by', :day => @formdata[:need_by_day], :month => @formdata[:need_by_month], :year => @formdata[:need_by_year]}%>

  <%= erb :date, :locals => {:title => "Not to be added before (if required)", :label => 'not_before', :day => @formdata[:not_before_day], :month => @formdata[:not_before_month], :year => @formdata[:not_before_year]}%>

  <label for="comments">Additional Comments</label>
  <textarea id="comments" rows="10" cols="50" name="additional"><%=@formdata[:additional]%></textarea>
</section>
