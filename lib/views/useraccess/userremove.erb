<section id="user">
  <header class="section-header">User details</header>

  <fieldset>
    <div class="upload">
      <label for="file-input">Do you want to upload a file? (20MB limit)</label>
      <input id="file-input" name="uploaded_data" type="file"/>
    </div>
  </fieldset>

  <fieldset>
    <label style="height:50px;">Alternatively</label>
  </fieldset>

  <label for="user_name">Username</label>
  <input id="user_name" name="user_name" type="text"  <%= erb :assignvalue, :locals => {:param => @formdata[:user_name]} %>>

  <label for="email">Email</label>
  <input id="email" name="user_email" type="email"  <%= erb :assignvalue, :locals => {:param => @formdata[:user_email]} %>>

  <%= erb :date, :locals => {:title => "Not before", :label => 'not_before', :day => @formdata[:not_before_day], :month => @formdata[:not_before_month], :year => @formdata[:not_before_year]}%>
  <div style="clear:both;"></div>

  <fieldset>
    <div class="comments">
      <label for="comments">Additional comments</label>
      <textarea id="comments" rows="10" cols="50" name="additional"><%= @formdata[:additional] %></textarea>
    </div>
  </fieldset>
</section>