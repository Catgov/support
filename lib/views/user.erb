<div id="wrapper">
  <section id="framework">

    <div class="inner">

      <header class="page-header group">
        <hgroup><h1>Create New User</h1></hgroup>
      </header>

      <%= erb :usermenu %>


      <div id="form">


        <form name="input" method="post">

          <%= erb :author %>

          <section id="content">
            <label for="user_name">User name</label>
            <input id="user_name" name="user_name" type="text" required>

            <label for="email">Email</label>
            <input id="email" name="user_email" type="email" required>

            <label for="comments">Please add additional comments below:</label>
            <textarea id="comments" rows="10" cols="60" name="additional"></textarea>
          </section>
          <input id="submit" type="submit" value="Submit">

        </form>
      </div>
      <div class="toclear"></div>
    </div>
  </section>
</div>

<%= erb :footer %>