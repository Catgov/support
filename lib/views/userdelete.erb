<section id="user">
  <header class="section-header">User details</header>
  <label for="user_name">Username</label>
  <input id="user_name" name="user_name" type="text" required>

  <label for="email">Email</label>
  <input id="email" name="user_email" type="email" required>

  <%= erb :date, :locals => {:title => "Not before", :label => 'not_before'}%>

  <label for="comments">Additonal comments</label>
  <textarea id="comments" rows="10" cols="50" name="additional"></textarea>
</section>