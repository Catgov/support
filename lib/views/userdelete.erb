<section id="user">
  <header class="section-header">Details of the user(s) to be deleted</header>
  <label for="user_name">User name</label>
  <input id="user_name" name="user_name" type="text" required>

  <label for="email">Email</label>
  <input id="email" name="user_email" type="email" required>

  <label for="not_before">Not before</label>
  <input id="not_before" name="not_before" type="date">

  <label for="comments">Please add additional comments below:</label>
  <textarea id="comments" rows="10" cols="50" name="additional"></textarea>
</section>