<section id="content">
  <header class="section-header">Content Details</header>
  <label for="target_url">URL on </label><label class="url">http://gov.uk/</label>
  <input id="target_url" name="target_url" type="text" required>

  <label for="feedback">Add your content</label>
  <textarea id="feedback" rows="6" cols="50" name="add_content" required></textarea>

  <label for="content_added_on">When should this content be added?</label>
  <input id="content_added_on" name="need_by" type="date" required>

  <label for="not_added_before">Not to be added before (if required)</label>
  <input id="not_added_before" name="not_before" type="date">

  <label for="comments">Please add additional comments below:</label>
  <textarea id="comments" rows="10" cols="50" name="additional"></textarea>
</section>
