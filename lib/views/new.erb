<div id="wrapper">
  <section id="framework">

    <header class="page-header group">
      <hgroup><h1>New Content</h1></hgroup>
    </header>

    <div class="inner">

      <%= erb :menu %>


      <div id="form">


        <form name="input" method="post">

          <%= erb :author, :locals => {:departments => departments} %>

          <section id="content">
            <label for="target_url">URL on gov.uk</label>
            <input id="target_url" name="target_url" type="url" required>

            <label for="feedback">Add your feedback</label>
            <textarea id="feedback" rows="6" cols="60" name="new_content" required></textarea>

            <label for="content_added_on">When should this content be added?</label>
            <input id="content_added_on" name="need_by" type="date" required>

            <label for="not_added_before">Not to be added before (if required)</label>
            <input id="not_added_before" name="not_before" type="date">

            <label for="comments">Please add additional comments below:</label>
            <textarea id="comments" rows="2" cols="60" name="additional"></textarea>
          </section>
          <input id="submit" type="submit" value="Submit">

        </form>
      </div>
      <div class="toclear"></div>
    </div>
  </section>
</div>