<li id="new-request-dropdown" class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#">Make new request <b class="caret"></b></a>

  <ul class="dropdown-menu" role="menu">
    <% section_groups.each_with_index do |section_group, index| %>
      <li role="presentation" class="dropdown-header"><%= section_group.label %></li>
      <% section_group.accessible_sections.each do |section| %>
        <%= nav_link_to section, is_active: current_page?(section.link) %>
      <% end %>
      <% if index < section_groups.to_a.size - 1 %>
        <li class="divider"></li>
      <% end %>
    <% end %>
  </ul>
</li>

<% if feedex_section.accessible? %>
  <%= nav_link_to(feedex_section, active: in_feedex?, id: "feedex") %>
<% end %>
