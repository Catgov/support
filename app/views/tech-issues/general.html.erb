<%= content_for :page_title, @page_title %>
<%= content_for :header, "Report a problem, request GDS support, or to make a suggestion." %>

<div class="alert alert-warning">
  <p>To raise critical issues with Directgov-branded tools and transactions, please call Graham Francis on 07798 926978.</p>
</div>

<%= form_tag('/general', :method => :post) do %>

  <%= render "author" %>

  <section id="content">
    <header class="section-header">Details of your problem, request or suggestion</header>
    <label for="target_url" class="long">URL (if applicable)</label>
    <input id="target_url" name="url" type="text" required aria-required="true" <%= render "assignvalue", {:param => @formdata[:url]} %>>
    <%= render "errors", {errors: @errors, key: "Url"} %>

    <fieldset>
      <div class="comments">
        <label for="comments">Details</label>
        <textarea id="comments" rows="10" cols="50" name="additional"><%= @formdata[:additional] %></textarea>
      </div>
    </fieldset>
  </section>
  <input class="btn btn-success" name="commit" type="submit" value="Submit">
<% end %>
