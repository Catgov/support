<%= content_for :page_title, "FeedEx" %>
<%= content_for :header, "Explore GOV.UK anonymous feedback" %>

<% breadcrumb :feedex %>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Feedback for a specific URL
      </div>
      <div class="panel-body">
        <%= semantic_form_for @explore, url: { action: "create" }, html: { novalidate: false } do |f| %>
          <%= f.input :by_url, label: "By URL", required: true, input_html: { class: "form-md-6", :"aria-required" => true, type: "url"} %>
          <%= f.action :submit, label: "Explore", button_html: { class: "btn btn-success" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
