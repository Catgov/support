<!DOCTYPE html>
<html>
<head>
  <%= render "header" %>
</head>

<body>
<div id="wrapper">
  <section id="framework">

    <div class="inner">

      <header class="content-header">
        <hgroup><h1><%= @header %></h1></hgroup>
      </header>

      <div role="complementary">
        <%= render "menu" %>
      </div>

      <div id="form" role="main">
        <%= render @header_message %>
        <%= form_tag "" do %>

          <%= render "author" %>

          <%= yield %>

          <input id="submit" type="submit" value="Submit">
        <% end %>
      </div>
      <div class="toclear"></div>
    </div>
  </section>
</div>

</body>
</html>